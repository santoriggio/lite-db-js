{
  "name": "lite-db-js",
  "version": "4.0.4",
  "description": "Local database for javascript's projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "yarn eslint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "madge:circular": "yarn madge -c ./src",
    "prepare": "yarn typecheck && yarn lint && yarn test && yarn build",
    "build": "tsc && yarn minify",
    "minify": "scripts/minify.js",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/santoriggio/lite-db-js.git"
  },
  "keywords": [
    "database",
    "javascript",
    "local"
  ],
  "author": "Santo Riggio",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@evilmartians/lefthook": "^1.7.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^9.6.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsdoc": "^48.5.2",
    "jest": "^29.7.0",
    "jsmin": "^1.0.1",
    "madge": "^7.0.0",
    "prettier": "^3.3.2",
    "release-it": "^17.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "uglify-js": "^3.18.0"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": false,
    "trailingComma": "all",
    "semi": true
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "yarn prepare"
      ]
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
